<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ASFOapp.StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_title_medium</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ASFOapp.StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/ASFOapp.StyleTitle14</item>
        <item name="cornerRadius">@dimen/corner_radius_medium_8dp</item>
    </style>
    <style name="ASFOapp.StyleTitle20" parent="ASFOapp.StyleTitle14">
        <item name="android:textSize">@dimen/size_header_title</item>
        <item name="android:textColor">@color/figma_purple</item>
    </style>
    <style name="ASFOapp.StyleHeaderTitle20" parent="ASFOapp.StyleTitle20">
        <item name="android:background">@drawable/shape_header_title20</item>
    </style>


    <style name="ASFOapp.StyleDescriptionCardView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_cardview_description</item>
        <item name="android:textColor">@color/figma_gray</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="ASFOapp.StyleTextRecipeRecycler" parent="ASFOapp.StyleDescriptionCardView">
        <item name="android:textSize">@dimen/size_title_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="ASFOapp.StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

    <style name="ASFOapp.StyleAddToFavoriteImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>