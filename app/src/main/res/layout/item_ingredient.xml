<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium_12dp"
    android:layout_marginTop="@dimen/spacing_medium_12dp"
    android:layout_marginBottom="@dimen/spacing_medium_16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient"
        style="@style/ASFOapp.StyleTextRecipeRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/ingredient" />

    <TextView
        android:id="@+id/cuantity"
        style="@style/ASFOapp.StyleTextRecipeRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="" />

    <TextView
        android:id="@+id/unitOfMeasure"
        style="@style/ASFOapp.StyleTextRecipeRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/unit_of_measure" />


</LinearLayout>
