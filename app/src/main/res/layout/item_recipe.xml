<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium_8dp"
    android:layout_marginTop="@dimen/spacing_medium_8dp"
    app:cardCornerRadius="@dimen/corner_radius_medium_8dp"
    android:elevation="@dimen/elevation_card">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_recipe_card_image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_error"/>
        <TextView
            android:id="@+id/recipeName"
            style="@style/ASFOapp.StyleTitle14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium_8dp"
            android:layout_marginVertical="@dimen/spacing_medium_8dp"
            android:textColor="@color/figma_purple"
            android:text="@string/cardview_title_recipe"/>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>