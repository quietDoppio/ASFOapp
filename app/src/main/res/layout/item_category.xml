<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium_8dp"
    android:layout_marginVertical="@dimen/spacing_medium_8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/corner_radius_medium_8dp"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardViewImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_categories_card_image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_error"/>

        <TextView
            android:id="@+id/cardViewTitle"
            style="@style/ASFOapp.StyleTitle14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium_8dp"
            android:layout_marginTop="@dimen/spacing_medium_8dp"
            android:text="@string/cardview_title_burger"
            android:textColor="@color/figma_purple" />

        <TextView
            android:id="@+id/cardViewDescription"
            style="@style/ASFOapp.StyleDescriptionCardView"
            android:layout_width="@dimen/layout_width_cardview_description"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium_8dp"
            android:layout_marginVertical="@dimen/spacing_medium_8dp"
            android:text="@string/cardview_description_burger" />

    </LinearLayout>
</androidx.cardview.widget.CardView>